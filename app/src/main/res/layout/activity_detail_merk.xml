<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMerkActivity"
    android:background="@color/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_act">

        <ImageView
            android:id="@+id/ic_back_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:paddingHorizontal="21dp"
            android:paddingVertical="30dp"
            android:layout_marginVertical="16dp"/>

        <ImageView
            android:layout_width="244dp"
            android:layout_height="179dp"
            android:id="@+id/gambar_detail_laptop"
            android:src="@drawable/aceraspire3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_nama_detail_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/gambar_detail_laptop"
            app:cardBackgroundColor="@color/card">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nama_detail_laptop"
                    android:textSize="20sp"
                    android:text="Acer "
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Harga Sewa : Rp 250.000/hari"
                    android:textColor="@color/black"
                    android:layout_below="@id/nama_detail_laptop"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_detail_laptop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="12dp"
            android:layout_below="@id/cv_nama_detail_laptop"
            app:cardBackgroundColor="@color/card2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_spek"
                    android:textSize="20sp"
                    android:text="Spesifikasi"
                    android:textColor="@color/white"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tv_spek_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Harga Sewa : Rp 250.000/hari"
                    android:textColor="@color/white"
                    android:layout_below="@id/tv_spek"
                    android:layout_alignLeft="@id/tv_spek"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="24dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/toolbar_daftar">

        <Button
            android:id="@+id/btn_sewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sewa Sekarang"
            android:paddingHorizontal="13dp"
            android:paddingVertical="10dp"
            android:layout_marginVertical="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_keranjang"
            android:src="@drawable/ic_keranjang_detail"
            android:layout_toLeftOf="@id/btn_sewa"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pesan"
            android:src="@drawable/ic_chat_detail"
            android:layout_toLeftOf="@id/btn_keranjang"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"/>

    </RelativeLayout>

</RelativeLayout>